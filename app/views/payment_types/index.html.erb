<p id="notice"><%= notice %></p>

<h2>Payment types</h2>
<br>
<div class="row">
  <span class="col-sm-8 col-md-4">
    <h4>Payment type</h4>
  </span>
</div>

<% @payment_types.each do |payment_type| %>
  <div class="row">
    <span class="col-sm-8 col-md-4">
      <h5>
        <%= payment_type.name %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', payment_type, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_payment_type_path(payment_type), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', payment_type, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New payment type', new_payment_type_path, method: 'get' %>
  </span>
</div>