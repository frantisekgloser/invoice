<!DOCTYPE html>
<meta charset="UTF-8">
<html>
<body>

<% if user_signed_in? %>

  <%= form_for(current_user) do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <form action=<%= edit_user_path(current_user) %>>
      <fieldset>
        <div class="row">
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Trade subject:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :trade_subject, size: 25 %></span>
        <span class="col-sm-5 col-md-1"><%= f.label :'Phone:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.phone_field :phone, size: 30 %></span>
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Identification number:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :identification_number, size: 25 %></span>
        <span class="col-sm-5 col-md-1"><%= f.label :'E-mail:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.email_field :mail, size: 30 %></span>
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'VAT:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :vat, size: 25  %></span>
        <span class="col-sm-5 col-md-1"><%= f.label :'WWW:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.url_field :web, size: 30 %></span>
        </div>
        <br>
        <div class="row">
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Street, house number:' %></span>
        <span class="col-sm-5 col-md-2"><%= f.text_field :street, size: 25 %></span>
        <span class="col-sm-2"><%= f.text_field :house_number, size: 15 %></span>
        <span class="col-sm-5 col-md-1"><%= f.label :'Bank:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :bank, size: 30 %></span>
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'City, city part:' %></span>
        <span class="col-sm-4 col-md-2"><%= f.text_field :city, size: 25 %></span>
        <span class="col-sm-3 col-md-2"><%= f.text_field :city_part, size: 15 %></span>
        <span class="col-sm-5 col-md-1"><%= f.label :'Account:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :bank_account, size: 30 %></span>
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Country, province:' %></span>
        <span class="col-sm-4 col-md-2"><%= f.text_field :country, size: 25 %></span>
        <span class="col-sm-3 col-md-2"><%= f.text_field :province, size: 15 %></span> 
        <span class="col-sm-5 col-md-1"><%= f.label :'IBAN: ' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :iban, size: 30 %></span>
        <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Postal code:' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :postal_code, size: 10 %></span>
        <span class="col-sm-5 col-md-1"><%= f.label :'SWIFT: ' %></span>
        <span class="col-sm-7 col-md-4"><%= f.text_field :swift, size: 30 %></span>
        </div>
        <br>
        <div class="row">
        <span class="col-sm-3 col-md-1 col-md-offset-1"><%= f.label :'Note:' %></span>
        <span class="col-sm-9 col-md-6"><%= f.text_area :note, size: "58x3" %></span>
        <span class="col-sm-12 col-md-1"><h3><input type="submit" value="Update my data" <action=<%= edit_user_path(current_user) %>></h3></span>
        </div>
        <br>
      </fieldset>
    </form>
    <fieldset style="background-color: #D1F2EB">
      <br>
      <center>
      <table>
        <%= button_to 'Countries', countries_path, method: 'get' %>
        <%= button_to 'Provinces', provinces_path, method: 'get' %>
        <%= button_to 'Cities', cities_path, method: 'get' %>
        <%= button_to 'City parts', city_parts_path, method: 'get' %>
        <%= button_to 'Streets', streets_path, method: 'get' %>
        <%= button_to 'House numbers', house_numbers_path, method: 'get' %>
        <%= button_to 'Address types', address_types_path, method: 'get' %>
        <%= button_to 'Address links', address_links_path, method: 'get' %>
        <%= button_to 'Trade subjects', trade_subjects_path, method: 'get' %>
        <%= button_to 'Projects', projects_path, method: 'get' %>
        <%= button_to 'Task types', task_types_path, method: 'get' %>
        <%= button_to 'Tasks', tasks_path, method: 'get' %>
        <%= button_to 'Day entries', day_entries_path, method: 'get' %>
      </table>
      <table>
        <%= button_to 'Currencies', currencies_path, method: 'get' %>
        <%= button_to 'Exchange rates', exchange_rates_path, method: 'get' %>
        <%= button_to 'Banks', banks_path, method: 'get' %>
        <%= button_to 'Bank accounts', bank_accounts_path, method: 'get' %>
        <%= button_to 'Payment types', payment_types_path, method: 'get' %>
        <%= button_to 'Payments', payments_path, method: 'get' %>
        <%= button_to 'Income reports', income_reports_path, method: 'get' %>
        <%= button_to 'Report types', report_types_path, method: 'get' %>
        <%= button_to 'Reports', reports_path, method: 'get' %>
        <%= button_to 'VAT charges', vat_charges_path, method: 'get' %>
        <%= button_to 'VAT reports', vat_reports_path, method: 'get' %>
      </table>
      </center>
    <br>
    <table>
      <span class="col-sm-12 col-md-2 col-md-offset-1"><%= button_to 'Outgoing invoices sequences', outsequences_path, method: 'get' %></span>
      <span class="col-sm-12 col-md-8"><form action=<%= outinvoices_path %>>
        <span class="col-sm-12 col-md-4 col-md-offset-1">Range from: <input type="date" name="from"></span>
        <span class="col-sm-12 col-md-4">Range till: <input type="date" name="till"></span>
        <span class="col-sm-12 col-md-2"><input type="submit" value="outgoing invoices" <action=<%= outinvoices_path %>></span>
     </form></span>
    </table>
    <br>
    <br>
    <table>
      <span class="col-sm-12 col-md-2 col-md-offset-1"><%= button_to 'Incomming invoices sequences', insequences_path, method: 'get' %></span>
      <span class="col-sm-12 col-md-8"><form action=<%= ininvoices_path %>>
        <span class="col-sm-12 col-md-4 col-md-offset-1">Range from: <input type="date" name="from"></span>
        <span class="col-sm-12 col-md-4">Range till: <input type="date" name="till"></span>
        <span class="col-sm-12 col-md-2"><input type="submit" value="incomming invoices" <action=<%= ininvoices_path %>></span>
      </form></span>
    </table>
    <br>
    <br>
    </fieldset>
<% end %>
<% else %>

  <br>
  <br>
  At first You have to Sign In!

<% end %>

</body>
</html>