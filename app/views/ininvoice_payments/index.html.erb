<p id="notice"><%= notice %></p>

<h2>Ininvoice payments</h2>
<br>
<div class="row">
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <h4>Amount</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>Payment</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>Incomming invoice</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>Exchange rate</h4>
  </span>
</div>

<% @ininvoice_payments.each do |ininvoice_payment| %>
  <div class="row">
    <span class="col-sm-12 col-md-2 col-md-offset-1">
      <h5>
        <%= ininvoice_payment.amount %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= ininvoice_payment.payment_id %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if ininvoice_payment.ininvoice_id then ininvoice_payment.ininvoice.number end %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if ininvoice_payment.exchange_rate_id then ininvoice_payment.exchange_rate.rate end %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to <%= link_to 'Show', ininvoice_payment, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_ininvoice_payment_path(ininvoice_payment), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', ininvoice_payment, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <%= button_to 'New ininvoice payment', new_ininvoice_payment_path, method: 'get' %>
  </span>
</div>