<p id="notice"><%= notice %></p>

<h2>Outgoing invoices</h2>
<br>
<div class="row">
  <span class="col-sm-6 col-md-1">
    <h4>Number</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Trade subject</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Due date</h4>
  </span>
  <span class="col-sm-6 col-md-1">
    <h4>Currency</h4>
  </span>
  <span class="col-sm-6 col-md-1">
    <h4>Base</h4>
  </span>
  <span class="col-sm-3 col-md-1">
    <h4>VAT</h4>
  </span>
  <span class="col-sm-3 col-md-1">
    <h4>Paid</h4>
  </span>
</div>

<% @outinvoices.each do |outinvoice| %>
  <div class="row">
    <span class="col-sm-6 col-md-1">
      <h5>
        <%= if outinvoice.outsequence_id then outinvoice.outsequence.name end %>
        <%= outinvoice.number %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= if outinvoice.trade_subject_id then outinvoice.trade_subject.name end %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= outinvoice.due_date %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-1">
      <h5>
        <%= if outinvoice.currency_id then outinvoice.currency.name end %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-1">
      <h5>
        <%= outinvoice.total_corrected_base %>
      </h5>
    </span>
    <span class="col-sm-3 col-md-1">
      <h5>
        <%= outinvoice.total_corrected_vat %>
      </h5>
    </span>
    <span class="col-sm-3 col-md-1">
      <h5>
        <%= outinvoice.paid %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', outinvoice, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_outinvoice_path(outinvoice), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', outinvoice, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New outgoing invoice', new_outinvoice_path, method: 'get' %>
  </span>
</div>