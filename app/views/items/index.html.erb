<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.note %></td>
          <td><%= item.unit_price %></td>
          <td><%= if item.currency_id then item.currency.name end %></td>
          <td><%= if item.vat_charge_id then item.vat_charge.percentage end %></td>
          <td><%= if item.trade_subject_id then item.trade_subject.name end %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>
    
<%= link_to 'New item', new_item_path %>