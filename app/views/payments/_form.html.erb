<%= form_for(@payment) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'Date' %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :'Amount' %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :'Note' %><br>
    <%= f.text_field :note %>
  </div>
  <div class="field">
    <%= f.label :'Payment type' %><br>
    <%= f.collection_select(:payment_type_id, current_user.payment_types.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :'Currency' %><br>
    <%= f.collection_select(:currency_id, current_user.currencies.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :'Bank account' %><br>
    <%= f.collection_select(:bank_account_id, current_user.bank_accounts.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :'Trade subject' %><br>
    <%= f.collection_select(:trade_subject_id, current_user.trade_subjects.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :'VAT report' %><br>
    <%= f.collection_select(:vat_report_id, current_user.vat_reports.all, :id, :number, :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :'Income report' %><br>
    <%= f.collection_select(:income_report_id, current_user.income_reports.all, :id, :number, :include_blank => true) %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>