<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Note</th>
      <th>Payment type</th>
      <th>Currency</th>
      <th>Bank account</th>
      <th>Trade subject</th>
      <th>VAT report</th>
      <th>Income report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.date %></td>
          <td><%= payment.amount %></td>
          <td><%= payment.note %></td>
          <td><%= if payment.payment_type_id then payment.payment_type.name end  %></td>
          <td><%= if payment.currency_id then payment.currency.name end %></td>
          <td><%= if payment.bank_account_id then payment.bank_account.name end %></td>
          <td><%= if payment.trade_subject_id then payment.trade_subject.name end %></td>
          <td><%= if payment.vat_report_id then payment.vat_report.number end %></td>
          <td><%= if payment.income_report_id then payment.income_report.number end %></td>
          <td><%= link_to 'Show', payment %></td>
          <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
          <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>
    
<%= link_to 'New payment', new_payment_path %>