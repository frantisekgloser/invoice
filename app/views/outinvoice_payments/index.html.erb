<p id="notice"><%= notice %></p>

<h2>Outgoing invoice payments</h2>
<br>
<div class="row">
  <span class="col-sm-6 col-md-2">
    <h4>Amount</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Payment</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Outgoing invoice</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Exchange rate</h4>
  </span>
</div>

<% @outinvoice_payments.each do |outinvoice_payment| %>
  <div class="row">
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= outinvoice_payment.amount %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= outinvoice_payment.payment_id %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= if outinvoice_payment.outinvoice_id then outinvoice_payment.outinvoice.number end %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= if outinvoice_payment.exchange_rate_id then outinvoice_payment.exchange_rate.rate end %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to <%= link_to 'Show', outinvoice_payment, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_outinvoice_payment_path(outinvoice_payment), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', outinvoice_payment, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <%= button_to 'New outgoing invoice payment', new_outinvoice_payment_path, method: 'get' %>
  </span>
</div>