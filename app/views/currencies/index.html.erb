<p id="notice"><%= notice %></p>

<h2>Currencies</h2>
<br>
<div class="row">
  <span class="col-sm-12 col-md-4">
    <h4>Currency</h4>
  </span>
</div>

<% @currencies.each do |currency| %>
  <div class="row">
    <span class="col-sm-12 col-md-4">
      <h5>
        <%= currency.name %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', currency, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_currency_path(currency), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New currency', new_currency_path, method: 'get' %>
  </span>
</div>