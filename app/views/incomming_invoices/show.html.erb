<p id="notice"><%= notice %></p>

<div class="row">  
  <h4>
    <span class="col-sm-12 col-md-4 col-md-offset-8 ">
      <strong>Number:</strong>
      <%= if @incomming_invoice.incomming_invoice_sequence_id then @incomming_invoice.incomming_invoice_sequence.name end %>
      <%= @incomming_invoice.number %>
    </span>
  </h4>
</div>
<br>
<div class="row">
  <span class="col-sm-12 col-md-8">
    <div class="row">
      <span class="col-sm-12 col-md-3">
        <strong>Trade subject:</strong>
      </span>
      <span class="col-sm-12 col-md-4">
        <%= if @incomming_invoice.trade_subject_id then @incomming_invoice.trade_subject.name end %>
      </span>
      <span class="col-sm-12 col-md-3">
        <strong>Currency:</strong>
      </span>
      <span class="col-sm-12 col-md-2">
        <%= if @incomming_invoice.currency_id then @incomming_invoice.currency.name end %>
      </span>
    </div>
    <div class="row">  
      <span class="col-sm-12 col-md-3">
        <strong>Original invoice:</strong>
      </span>
      <span class="col-sm-12 col-md-4">
        <%= @incomming_invoice.original_invoice %>
      </span>
      <span class="col-sm-12 col-md-3">
        <strong>Exchange rate:</strong>
      </span>
      <span class="col-sm-12 col-md-2">          
        <%= if @incomming_invoice.exchange_rate_id then @incomming_invoice.exchange_rate.rate end %>
      </span>
    </div>
    <div class="row">  
      <span class="col-sm-12 col-md-3">
        <strong>Original invoice md5:</strong>
      </span>
      <span class="col-sm-12 col-md-4">
        <%= @incomming_invoice.original_invoice_md5 %>
      </span>
      <span class="col-sm-12 col-md-3">
        <strong>Total computed base:</strong>
      </span>
      <span class="col-sm-12 col-md-2">
        <%= @incomming_invoice.total_computed_base %>
      </span>
    </div>
    <div class="row">  
      <span class="col-sm-12 col-md-3">
        <strong>Translated invoice:</strong>
      </span>
      <span class="col-sm-12 col-md-4">
        <%= @incomming_invoice.translated_invoice %>
      </span>
      <span class="col-sm-4 col-md-3">
        <strong>Total computed VAT:</strong>
      </span>
      <span class="col-sm-12 col-md-2">         
        <%= @incomming_invoice.total_computed_vat %>
      </span>
    </div>
    <div class="row">
      <span class="col-sm-12 col-md-3">
        <strong>Translated invoice md5:</strong>
      </span>
      <span class="col-sm-12 col-md-4">
        <%= @incomming_invoice.translated_invoice_md5 %>
      </span>
      <span class="col-sm-12 col-md-3">
        <strong>Total corrected base:</strong>
      </span>
      <span class="col-sm-12 col-md-2">
        <%= @incomming_invoice.total_corrected_base %>
      </span>    
    </div>
    <div class="row">  
      <span class="col-sm-12 col-md-1">
        <strong>Note:</strong>
      </span>
      <span class="col-sm-12 col-md-6">
        <%= @incomming_invoice.note %>
      </span>
      <span class="col-sm-12 col-md-3">
        <strong>Total corrected VAT:</strong>
      </span>
      <span class="col-sm-12 col-md-2">
        <%= @incomming_invoice.total_corrected_vat %>
      </span>
    </div>
  </span>
  <span class="col-sm-12 col-md-4">
    <div class="row">
      <span class="col-sm-12 col-md-5">
        <strong>Generated on date:</strong>
      </span>
      <span class="col-sm-12 col-md-7">
        <%= @incomming_invoice.generated_on_date %>
      </span>
    </div>
    <div class="row">
      <span class="col-sm-12 col-md-5">
        <strong>Taxable supply date:</strong>
      </span>
      <span class="col-sm-12 col-md-7">
        <%= @incomming_invoice.taxable_supply_date %>
      </span>
    </div>
    <div class="row">
      <span class="col-sm-12 col-md-5">
        <strong>Due date:</strong>
      </span>
      <span class="col-sm-12 col-md-7">
        <%= @incomming_invoice.due_date %>
      </span>
    </div>
    <div class="row">
      <span class="col-sm-12 col-md-5">
        <strong>Reverse charge:</strong>
      </span>
      <span class="col-sm-12 col-md-7">
       <%= @incomming_invoice.reverse_charge %>
      </span>
    </div>
    <div class="row">
      <span class="col-sm-12 col-md-5">
        <strong>Paid:</strong>
      </span>
      <span class="col-sm-12 col-md-7">
        <%= @incomming_invoice.paid %>
      </span>
    </div>
  </span>
</div>
<%= render 'incomming_invoice_items/index2' %>
<br>
<div class="row">
  <span class="col-sm-6 col-md-2">
    <%= button_to 'Edit', edit_incomming_invoice_path(@incomming_invoice), method: 'get' %>
  </span>
  <span class="col-sm-6 col-md-2">
    <%= button_to 'Back', request.referrer, method: 'get' %>
  </span>
</div>