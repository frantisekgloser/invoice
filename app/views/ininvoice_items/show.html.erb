<p id="notice"><%= notice %></p>

<div class="row">   
  <span class="col-sm-6 col-md-3">
    <strong>Item:</strong>
    <%= if @ininvoice_item.item_id then @ininvoice_item.item.name end %>
  </span>
  <span class="col-sm-3 col-md-3">
    <strong>Amount:</strong>
    <%= @ininvoice_item.amount %>
  </span>
  <span class="col-sm-3 col-md-3">
    <strong>Incomming invoice:</strong>
    <%= if @ininvoice_item.ininvoice_id then @ininvoice_item.ininvoice.number end %>
  </span>
  <span class="col-sm-12 col-md-3">
    <strong>Note:</strong>
    <%= @ininvoice_item.note %>
  </span>
</div>
<br>
<div class="row">
  <span class="col-sm-6 col-md-2">
    <%= button_to 'Edit', edit_ininvoice_item_path(@ininvoice_item), method: 'get' %>
  </span>
  <span class="col-sm-6 col-md-2">
    <%= button_to 'Back', ininvoice_items_path, method: 'get' %>
  </span>
</div>