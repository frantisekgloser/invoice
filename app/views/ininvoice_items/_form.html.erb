<%= form_for(@ininvoice_item) do |f| %>
  <% if @ininvoice_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ininvoice_item.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @ininvoice_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <span class="col-sm-12 col-md-2 col-md-offset-1">
      <%= f.label :'Amount' %>
      <%= f.text_field :amount %>
    </span>
    <span class="col-sm-12 col-md-2">
      <%= f.label :'Note' %>
      <%= f.text_field :note %>
    </span>
    <span class="col-sm-12 col-md-2">
      <%= f.label :'Incomming invoice' %>
      <%= f.collection_select(:ininvoice_id, current_user.ininvoices.all, :id, :number) %>
    </span>
    <span class="col-sm-12 col-md-2">
      <%= f.label :'Item' %>
      <%= f.collection_select(:item_id, current_user.items.all, :id, :name) %>
    </span>
    <span class="actions">
      <%= f.submit %>
    </span>
  </div>
<% end %>