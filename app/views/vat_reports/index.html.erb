<p id="notice"><%= notice %></p>

<h2>VAT reports</h2>
<br>
<div class="row">
  <span class="col-sm-6 col-md-1">
    <h4>Number</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Date</h4>
  </span>
  <span class="col-sm-6 col-md-1">
    <h4>To pay</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>To receive</h4>
  </span>
  <span class="col-sm-12 col-md-3">
    <h4>Note</h4>
  </span>
</div>

<% @vat_reports.each do |vat_report| %>
 <div class="row">
    <span class="col-sm-6 col-md-1">
      <h5>
        <%= vat_report.number %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= vat_report.date %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-1">
      <h5>
        <%= vat_report.to_pay %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= vat_report.to_receive %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-3">
      <h5>
        <%= vat_report.note  %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', vat_report, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_vat_report_path(vat_report), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', vat_report, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New VAT report', new_vat_report_path, method: 'get' %>
  </span>
</div>