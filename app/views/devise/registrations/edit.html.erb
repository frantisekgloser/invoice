<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
 <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :'Trade subject' %><br />
    <%= f.email_field :trade_subject, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Identification number' %><br />
    <%= f.email_field :identification_number, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'VAT' %><br />
    <%= f.email_field :vat, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Street' %><br />
    <%= f.email_field :street, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'house_number' %><br />
    <%= f.email_field :house_number, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'City part' %><br />
    <%= f.email_field :city_part, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'City' %><br />
    <%= f.email_field :city, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Postal code' %><br />
    <%= f.email_field :postal_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Province' %><br />
    <%= f.email_field :province, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Country' %><br />
    <%= f.email_field :country, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Phone' %><br />
    <%= f.email_field :phone, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'E-mail' %><br />
    <%= f.email_field :mail, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'WWW' %><br />
    <%= f.email_field :web, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Note' %><br />
    <%= f.email_field :note, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Bank' %><br />
    <%= f.email_field :bank, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'Bank account' %><br />
    <%= f.email_field :bank_account, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'IBAN' %><br />
    <%= f.email_field :iban, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :'SWIFT' %><br />
    <%= f.email_field :swift, autofocus: true %>
  </div>
  <br>
 
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

 
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
