      <span class="col-sm-5 col-md-1"><%= f.label :'Phone:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.phone_field :phone, size: 30 %></span>
      <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Identification number:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.text_field :identification_number, size: 25 %></span>
      <span class="col-sm-5 col-md-1"><%= f.label :'E-mail:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.email_field :mail, size: 30 %></span>
      <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'VAT:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.text_field :vat, size: 25  %></span>
      <span class="col-sm-5 col-md-1"><%= f.label :'WWW:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.url_field :web, size: 30 %></span>
    </div>
