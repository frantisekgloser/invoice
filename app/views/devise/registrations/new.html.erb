    <div class="row">
      <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Street, house number:' %></span>
      <span class="col-sm-5 col-md-2"><%= f.text_field :street, size: 25 %></span>
      <span class="col-sm-2"><%= f.text_field :house_number, size: 15 %></span>
      <span class="col-sm-5 col-md-1"><%= f.label :'Bank:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.text_field :bank, size: 30 %></span>
