      <span class="col-sm-7 col-md-4"><%= f.text_field :iban, size: 30 %></span>
      <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Postal code:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.text_field :postal_code, size: 10 %></span>
      <span class="col-sm-5 col-md-1"><%= f.label :'SWIFT: ' %></span>
      <span class="col-sm-7 col-md-4"><%= f.text_field :swift, size: 30 %></span>
