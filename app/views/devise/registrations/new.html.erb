      <span class="col-sm-4 col-md-2"><%= f.text_field :city, size: 25 %></span>
      <span class="col-sm-3 col-md-2"><%= f.text_field :city_part, size: 15 %></span>
      <span class="col-sm-5 col-md-1"><%= f.label :'Account:' %></span>
      <span class="col-sm-7 col-md-4"><%= f.text_field :bank_account, size: 30 %></span>
      <span class="col-sm-5 col-md-2 col-md-offset-1"><%= f.label :'Country, province:' %></span>
      <span class="col-sm-4 col-md-2"><%= f.text_field :country, size: 25 %></span>
      <span class="col-sm-3 col-md-2"><%= f.text_field :province, size: 15 %></span> 
