      <span class="col-sm-3 col-md-1 col-md-offset-1"><%= f.label :'Note:' %></span>
      <span class="col-sm-9 col-md-7"><%= f.text_area :note, size: "58x3" %></span>
      <span class="actions">
        <h1><%= f.submit "Sign up" %></h1>
      </span>
