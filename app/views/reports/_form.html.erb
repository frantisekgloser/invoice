<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
