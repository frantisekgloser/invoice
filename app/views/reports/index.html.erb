<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>To pay</th>
      <th>To receive</th>
      <th>Report type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.date %></td>
          <td><%= report.to_pay %></td>
          <td><%= report.to_receive %></td>
          <td><%= if report.report_type_id then report.report_type.name end  %></td>
          <td><%= link_to 'Show', report %></td>
          <td><%= link_to 'Edit', edit_report_path(report) %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>
    
<%= link_to 'New report', new_report_path %>