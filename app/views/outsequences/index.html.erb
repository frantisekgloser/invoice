<p id="notice"><%= notice %></p>

<h2>Outgoing invoices sequences</h2>
<br>
<div class="row">
  <span class="col-sm-4 col-md-3">
    <h4>Sequence</h4>
  </span>
  <span class="col-sm-4 col-md-3">
    <h4>Note</h4>
  </span>
</div>

<% @outsequences.each do |outsequence| %>
  <div class="row">
    <span class="col-sm-4 col-md-3">
      <h5>
        <%= outsequence.name %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-3">
      <h5>
        <%= outsequence.note %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', outsequence, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_outsequence_path(outsequence), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', outsequence, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New sequence', new_outsequence_path, method: 'get' %>
  </span>
</div>