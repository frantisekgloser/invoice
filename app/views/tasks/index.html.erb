<p id="notice"><%= notice %></p>

<h2>Tasks</h2>
<br>
<div class="row">
  <span class="col-sm-6 col-md-2">
    <h4>Name</h4>
  </span>
  <span class="col-sm-6 col-md-3">
    <h4>Link</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Note</h4>
  </span>
  <span class="col-sm-6 col-md-2">
    <h4>Project</h4>
  </span>
</div>

<% @tasks.each do |task| %>
  <div class="row">
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= task.name %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-3">
      <h5>
        <%= task.link %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= task.note %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-2">
      <h5>
        <%= if task.project_id then task.project.name end  %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', task, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_task_path(task), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New task', new_task_path, method: 'get' %>
  </span>
</div>