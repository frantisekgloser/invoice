<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <span class="col-sm-6 col-md-4">
      <%= f.label :'Name' %>
      <%= f.text_field :name %>
    </span>
    <span class="col-sm-6 col-md-4">
      <%= f.label :'Link' %>
      <%= f.text_field :link, size: 40 %>
    </span>
  </div>
  <br>
  <div class="row">
    <span class="col-sm-6 col-md-4">
      <%= f.label :'Note' %><br>
      <%= f.text_area :note, size: '40x3' %>
    </span>
    <span class="col-sm-6 col-md-4">
      <%= f.label :'Project' %>
      <%= f.collection_select(:project_id, current_user.projects.all, :id, :name) %>
    </span>
    <span class="actions">
      <%= f.submit %>
    </span>
  </div>
<% end %>