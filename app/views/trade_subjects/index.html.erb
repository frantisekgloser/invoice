<p id="notice"><%= notice %></p>

<h2>Trade subjects</h2>
<br>
<div class="row">
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <h4>Name</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>Identification number</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>VAT</h4>
  </span>
</div>

<% @trade_subjects.each do |trade_subject| %>
  <div class="row">
    <span class="col-sm-12 col-md-2 col-md-offset-1">
      <h5>
        <%= trade_subject.name %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= trade_subject.identification_number %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= trade_subject.vat %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', trade_subject, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_trade_subject_path(trade_subject), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', trade_subject, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <%= button_to 'New trade subject', new_trade_subject_path, method: 'get' %>
  </span>
</div>