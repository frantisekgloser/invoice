<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Province</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.postal_code %></td>
          <td><%= if city.country_id then city.country.name end %></td>
          <td><%= if city.province_id then city.province.name end%></td>
          <td><%= link_to 'Show', city %></td>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>
    
<%= link_to 'New city', new_city_path %>