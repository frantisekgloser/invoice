    <%= f.label :'Postal code' %><br>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :'Country' %><br>
    <%= f.collection_select(:country_id, current_user.countries.all, :id, :name) %>
  </div>
  <br>
  <div class="field">
    <%= f.label :'Province' %><br>
    <%= f.collection_select(:province_id, current_user.provinces.all, :id, :name, :include_blank => true) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
