<p id="notice"><%= notice %></p>

<h1>Bank accounts</h1>

<table>
  <thead>
    <tr>
      <th>Bank account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @bank_accounts.each do |bank_account| %>
        <tr>
          <td><%= bank_account.name %></td>
          <td><%= bank_account.number %></td>
          <td><%= bank_account.iban %></td>
          <td><%= if bank_account.bank_id then bank_account.bank.name end %></td>
          <td><%= if bank_account.currency_id then bank_account.currency.name end %></td>
          <td><%= link_to 'Show', bank_account %></td>
          <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
          <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>
    
<%= link_to 'New bank account', new_bank_account_path %>