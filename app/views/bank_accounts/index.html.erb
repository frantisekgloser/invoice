<p id="notice"><%= notice %></p>

<h2>Bank accounts</h2>
<br>
<div class="row">
  <span class="col-sm-4 col-md-2">
    <h4>Bank account</h4>
  </span>
  <span class="col-sm-4 col-md-2">
    <h4>Account number</h4>
  </span>
  <span class="col-sm-4 col-md-2">
    <h4>IBAN</h4>
  </span>
  <span class="col-sm-4 col-md-2">
    <h4>Bank</h4>
  </span>
  <span class="col-sm-4 col-md-1">
    <h4>Currency</h4>
  </span>
</div>

<% @bank_accounts.each do |bank_account| %>
  <div class="row">
    <span class="col-sm-4 col-md-2">
      <h5>
        <%= bank_account.name %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-2">
      <h5>
        <%= bank_account.number %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-2">
      <h5>
        <%= bank_account.iban %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-2">
      <h5>
        <%= if bank_account.bank_id then bank_account.bank.name end %>
      </h5>
    </span>
    <span class="col-sm-4 col-md-1">
      <h5>
        <%= if bank_account.currency_id then bank_account.currency.name end %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', bank_account, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_bank_account_path(bank_account), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <td><%= button_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New bank account', new_bank_account_path, method: 'get' %>
  </span>
</div>