<p id="notice"><%= notice %></p>

<h2>Projects</h2>
<br>
<div class="row">
  <span class="col-sm-6 col-md-3">
    <h4>Name</h4>
  </span>
  <span class="col-sm-6 col-md-3">
    <h4>Note</h4>
  </span>
  <span class="col-sm-6 col-md-3">
    <h4>Trade subject</h4>
  </span>
</div>

<% @projects.each do |project| %>
  <div class="row">
    <span class="col-sm-6 col-md-3">
      <h5>
        <%= project.name %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-3">
      <h5>
        <%= project.note %>
      </h5>
    </span>
    <span class="col-sm-6 col-md-3">
      <h5>
        <%= if project.trade_subject_id then project.trade_subject.name end %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', project, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_project_path(project), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2">
    <%= button_to 'New project', new_project_path, method: 'get' %>
  </span>
</div>