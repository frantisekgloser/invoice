<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <span class="col-sm-12 col-md-3 col-md-offset-1">
      <%= f.label :'Name' %>
      <%= f.text_field :name %>
    </span>
    <span class="col-sm-12 col-md-3">
      <%= f.label :'Note' %>
      <%= f.text_field :note %>
    </span>
    <span class="col-sm-12 col-md-3">
      <%= f.label :'Trade subject' %>
      <%= f.collection_select(:trade_subject_id, current_user.trade_subjects.all, :id, :name) %>
    </span>
    <span class="actions">
      <%= f.submit %>
    </span>
  </div>
<% end %>