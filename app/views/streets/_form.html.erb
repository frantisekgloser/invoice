<%= form_for(@street) do |f| %>
  <% if @street.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@street.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @street.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <span class="col-sm-12 col-md-3 col-md-offset-1">
      <%= f.label :'Name' %>
      <%= f.text_field :name %>
    </span>
    <span class="col-sm-12 col-md-2">
      <%= f.label :'City' %>
      <%= f.collection_select(:city_id, current_user.cities.all, :id, :name) %>
    </span>
    <span class="col-sm-12 col-md-2">
      <%= f.label :'City part' %>
      <%= f.collection_select(:city_part_id, current_user.city_parts.all, :id, :name, :include_blank => true) %>
    </span>
    <span class="actions">
      <%= f.submit %>
    </span>
  </div>
<% end %>