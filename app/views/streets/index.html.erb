<p id="notice"><%= notice %></p>

<h2>Streets</h2>
<br>
<div class="row">
  <span class="col-sm-12 col-md-1">
    <h4>Name</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>City</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>City part</h4>
  </span>
</div>

<% @streets.each do |street| %>
  <div class="row">
    <span class="col-sm-12 col-md-2 col-md-offset-1">
      <h5>
        <%= street.name %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if street.city_id then street.city.name end  %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if street.city_part_id then street.city_part.name end  %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', street, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_street_path(street), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', street, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <%= button_to 'New street', new_street_path, method: 'get' %>
  </span>
</div>