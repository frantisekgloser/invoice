<p id="notice"><%= notice %></p>

<h2>Address links</h2>
<br>
<div class="row">
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <h4>Address type</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>Street</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>House number</h4>
  </span>
  <span class="col-sm-12 col-md-2">
    <h4>City</h4>
  </span>
</div>

<% @address_links.each do |address_link| %>
  <div class="row">
    <span class="col-sm-12 col-md-2 col-md-offset-1">
      <h5>
        <%= if address_link.address_type_id then address_link.address_type.name end %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if address_link.house_number_id &&  address_link.house_number.street_id then address_link.house_number.street.name end %>
      </h5>
    </span>
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if address_link.house_number_id then address_link.house_number.house_number end %>
      </h5>
    </span> 
    <span class="col-sm-12 col-md-2">
      <h5>
        <%= if address_link.house_number_id then address_link.house_number.city.name end %>
      </h5>
    </span>    
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Show', address_link, method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Edit', edit_address_link_path(address_link), method: 'get' %>
    </span>
    <span class="col-sm-4 col-md-1">
      <%= button_to 'Destroy', address_link, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>
<% end %>
<br>
<div class="row">   
  <span class="col-sm-12 col-md-2 col-md-offset-1">
    <%= button_to 'New address link', new_address_link_path, method: 'get' %>
  </span>
</div>