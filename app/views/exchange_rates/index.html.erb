<p id="notice"><%= notice %></p>

<h1>Exchange rates</h1>

<table>
  <thead>
    <tr>
      <th>Exchange rate</th>
      <th>Exchange rate date</th>
      <th>Bank</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @exchange_rates.each do |exchange_rate| %>
        <tr>
          <td><%= exchange_rate.rate %></td>
          <td><%= exchange_rate.date %></td>
          <td><%= if exchange_rate.bank_id then exchange_rate.bank.name end %></td>
          <td><%= if exchange_rate.currency_id then exchange_rate.currency.name end %></td>
          <td><%= link_to 'Show', exchange_rate %></td>
          <td><%= link_to 'Edit', edit_exchange_rate_path(exchange_rate) %></td>
          <td><%= link_to 'Destroy', exchange_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>
    
